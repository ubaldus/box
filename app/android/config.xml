<?xml version='1.0' encoding='utf-8'?>
<widget id="it.eja.box" version="1.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>ejaBox</name>
    <description>
        eja portable unix environment
    </description>
    <author email="ubaldo@eja.it" href="http://box.eja.it">
        Ubaldo Porcheddu
    </author>
    <content src="index.html" />
    <icon src="eja.png" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <plugin name="cordova-plugin-file" source="npm" spec="3.0.0" />
    <plugin name="cordova-plugin-file-transfer" source="npm" spec="1.4.0" />
    <plugin name="cordova-plugin-networkinterface" source="npm" spec="1.0.8" />
    <plugin name="cordova-plugin-inappbrowser" source="npm" spec="1.3.0" />
    <plugin name="stop-cordova-plugin-shell-exec" source="npm" spec="1.0.0" />    
    <engine name="android" spec="~4.1.1" />
</widget>
